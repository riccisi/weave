{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
//      "@core/*": ["src/core/*"],
      "@state/*": ["src/state/*"],
      "@ui/*": ["src/ui/*"],
//      "@form/*": ["src/form/*"],
//      "@validation/*": ["src/validation/*"],
//      "@refx/*": ["src/core/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "eslint.config.js",
    "vite.config.ts"
  ]
}
